@Library('shared-library') _

pipeline {
    agent any
    
    stages {
        stage('Checkout') {
            steps {
                echo 'ğŸ“¥ Code checked out from GitHub'
            }
        }
        
        stage('Build Docker Image') {
            steps {
                script {
                    buildDockerImage(
                        imageName: 'jenkins-demo',
                        buildNumber: env.BUILD_NUMBER
                    )
                }
            }
        }
        
        stage('Test') {
            steps {
                echo 'ğŸ§ª Running tests...'
                echo 'âœ… All tests passed!'
            }
        }
        
        stage('Blue-Green Deployment') {
            steps {
                script {
                    blueGreenDeploy(
                        imageName: 'jenkins-demo',
                        buildNumber: env.BUILD_NUMBER
                    )
                }
            }
        }
    }
    
    post {
        success {
            echo 'âœ… Pipeline with Blue-Green deployment completed successfully!'
        }
        failure {
            echo 'âŒ Pipeline failed - previous environment still active'
        }
    }
}
