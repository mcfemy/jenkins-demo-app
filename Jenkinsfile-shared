@Library('shared-library') _

pipeline {
    agent any
    
    stages {
        stage('Checkout') {
            steps {
                echo 'ğŸ“¥ Code checked out from GitHub'
            }
        }
        
        stage('Build') {
            steps {
                script {
                    buildDockerImage(
                        imageName: 'jenkins-demo',
                        buildNumber: env.BUILD_NUMBER
                    )
                }
            }
        }
        
        stage('Test') {
            steps {
                echo 'ğŸ§ª Running tests...'
                echo 'âœ… Tests passed!'
            }
        }
        
        stage('Deploy') {
            steps {
                script {
                    deployContainer(
                        imageName: 'jenkins-demo',
                        buildNumber: env.BUILD_NUMBER,
                        port: 3000
                    )
                }
            }
        }
    }
    
    post {
        success {
            echo 'âœ… Pipeline completed successfully using shared library!'
        }
        failure {
            echo 'âŒ Pipeline failed!'
        }
    }
}
